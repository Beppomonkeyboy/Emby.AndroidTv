<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/fdTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20sp"
        android:textSize="35sp"
        android:shadowColor="#d00d0d0d"
        android:fontFamily="Roboto Light"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="160sp"
        android:layout_marginLeft="50sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:id="@+id/fdMainInfoRow"
        android:dividerPadding="4sp"
        android:layout_below="@+id/fdTitle"
        android:layout_alignStart="@+id/fdTitle"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdMainInfoRow"
        android:id="@+id/fdGenreRow"
        android:layout_alignStart="@+id/fdMainInfoRow"
        android:divider="@drawable/whitedivider"
        android:minHeight="22sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/fdGenreRow"
        android:layout_marginTop="10sp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summaryBg"
                android:maxHeight="300sp"
                android:minHeight="300sp"
                android:src="@color/semi_trans_dark"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fdPoster"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="false"
                android:layout_alignTop="@+id/summaryBg"
                android:minWidth="250sp"
                android:layout_alignLeft="@+id/summaryBg"
                android:layout_alignBottom="@+id/summaryBg"
                android:maxWidth="250sp"
                android:layout_marginLeft="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fdSummaryText"
                android:width="500sp"
                android:height="195sp"
                android:textSize="16sp"
                android:layout_alignTop="@+id/summaryBg"
                android:layout_alignParentRight="false"
                android:layout_marginRight="150sp"
                android:layout_marginTop="65sp"
                android:layout_toRightOf="@+id/fdPoster"
                android:layout_marginLeft="40sp"
                android:layout_alignRight="@+id/summaryBg"
                android:maxLines="9"
                android:ellipsize="end" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/summaryBg"
                android:layout_alignStart="@+id/fdSummaryText"
                android:id="@+id/fdButtonRow"
                android:layout_alignEnd="@+id/fdSummaryText"
                android:layout_marginTop="207dp"
                android:minHeight="35sp"
                android:gravity="center"
                android:showDividers="middle"
                android:divider="@drawable/blank30x30"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fdSummaryTitle"
                android:layout_alignStart="@+id/fdSummaryText"
                android:layout_alignTop="@+id/summaryBg"
                android:layout_alignEnd="@+id/fdSummaryText"
                android:layout_marginTop="5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fdSummarySubTitle"
                android:layout_alignStart="@+id/fdSummaryText"
                android:layout_below="@+id/fdSummaryTitle"
                android:layout_alignEnd="@+id/fdSummaryTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/fdButtonHelp"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/summaryBg"
                android:layout_alignStart="@+id/fdButtonRow"
                android:layout_alignEnd="@+id/fdButtonRow"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/fdLastPlayedText"
                android:layout_alignStart="@+id/fdPoster"
                android:gravity="center"
                android:layout_below="@+id/summaryBg"
                android:layout_alignEnd="@+id/fdPoster"
                android:layout_alignParentBottom="false" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="false"
                android:id="@+id/rowsFragment"
                android:layout_below="@+id/fdButtonHelp"></FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fdClock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fdTitle"
        android:textSize="40sp"
        android:layout_marginRight="40sp"
        android:format12Hour="h:mm"
        android:format24Hour="k:mm"
        android:alpha=".8" />

</RelativeLayout>