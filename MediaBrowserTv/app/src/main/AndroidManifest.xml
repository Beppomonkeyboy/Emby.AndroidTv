<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv.emby.embyatv" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:name="tv.emby.embyatv.TvApp"
        android:banner="@drawable/app_icon"
        android:icon="@drawable/mblogo512"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leanback" >
        <activity
            android:name="tv.emby.embyatv.browsing.MainActivity"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="tv.emby.embyatv.playback.PlayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name="tv.emby.embyatv.details.DetailsActivity" />
        <activity
            android:name="tv.emby.embyatv.startup.StartupActivity"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tv.emby.embyatv.startup.ConnectActivity"
            android:label="@string/title_activity_connect" >
        </activity>
        <activity
            android:name="tv.emby.embyatv.startup.SelectUserActivity"
            android:label="@string/title_activity_select_user" >
        </activity>
        <activity
            android:name="tv.emby.embyatv.playback.PlaybackOverlayActivity"
            android:label="PlaybackOverlayActivity" >
        </activity>
        <activity android:name="tv.emby.embyatv.browsing.GenericFolderActivity" />
        <activity android:name="tv.emby.embyatv.browsing.UserViewActivity" />
        <activity android:name="tv.emby.embyatv.startup.SelectServerActivity" />
        <activity android:name="tv.emby.embyatv.browsing.CollectionActivity" />
        <activity android:name="tv.emby.embyatv.startup.ExpiredActivity" />
        <activity android:name="tv.emby.embyatv.browsing.ByLetterActivity" />
        <activity android:name="tv.emby.embyatv.browsing.ByGenreActivity" />
        <activity android:name="tv.emby.embyatv.settings.SettingsActivity" />
        <activity android:name="tv.emby.embyatv.browsing.SuggestedMoviesActivity" />
        <activity android:name="tv.emby.embyatv.browsing.BrowsePersonsActivity" />
        <activity android:name="tv.emby.embyatv.search.SearchActivity" />
        <activity android:name="tv.emby.embyatv.details.FullDetailsActivity" />
        <activity android:name="tv.emby.embyatv.startup.DirectEntryActivity" />
        <activity
            android:name="tv.emby.embyatv.startup.DpadPwActivity"
            android:label="@string/title_activity_dpad_pw" >
        </activity>
    </application>

</manifest>
